{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
	"baseUrl": "./src",
	"paths": {
		"@validators/*": ["validators/*"],
		"@src/*": ["*"]
	}
  },
  "include": [
    "src/HandyValidator.ts"
  ],
  "exclude": [
    "node_modules",
    "./tests/*"
  ]
}
