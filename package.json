{
  "name": "handy-validator",
  "version": "1.1.0",
  "description": "Handy value validator",
  "main": "./dist/handy-validator.min.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "rollup": "rollup ./src/handy-validator.js --file ./dist/handy-validator.bundle.js --format cjs",
    "babel": "npx babel ./dist/handy-validator.bundle.js --out-file ./dist/handy-validator.babel.js --source-map",
    "uglify": "uglifyjs --output ./dist/handy-validator.min.js --compress --mangle -- ./dist/handy-validator.babel.js",
    "build": "npm run rollup & npm run babel & npm run uglify",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radoslawkuswik/handy-validator.git"
  },
  "keywords": [
    "validator",
    "javascript"
  ],
  "author": "Radosław Kuświk <kontakt@radoslawkuswik.pl> (https://radoslawkuswik.pl)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/radoslawkuswik/handy-validator/issues"
  },
  "homepage": "https://github.com/radoslawkuswik/handy-validator#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.4.2",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.5.0",
    "rollup": "^0.65.0",
    "uglify-js": "^3.4.8"
  }
}
